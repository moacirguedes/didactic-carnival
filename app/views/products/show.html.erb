<div class="profile-container">

  <% if notice %>
    <p id="notice" class="alert alert-success"><%= notice %></p>
  <% end %>

  <h1 class="text-center">Product</h1>

  <br>
  <div class="card">
    <div class="card-body">

      <div class="form-group">
        <label><strong>Name</strong></label><br>
        <%= @product.name %>
      </div>

      <div class="form-group">
        <label><strong>Price</strong></label><br>
        $ <%= @product.price %>
      </div>

      <%= link_to 'Edit', edit_product_path(@product), class: "btn btn-block btn-secondary" %> 
      <%= link_to 'Back', products_path, class: "bVoltartn btn-light btn-block" %>
    </div>
</div>
